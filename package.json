{
  "name": "deviators-website",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "clean": "rm -rf node_modules .next",
    "dev": "next dev --turbo",
    "dev:clean": "pnpm run clean && pnpm install && pnpm run dev",
    "build": "next build",
    "build:clean": "pnpm run clean && pnpm install && pnpm run build",
    "start": "next start",
    "lint": "next lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,md,mdx,css,yaml,yml}\"",
    "check": "prettier --check \"**/*.{ts,tsx,js,jsx,md,mdx,css,yaml,yml}\"",
    "prepare": "husky"
  },
  "dependencies": {
    "@heroicons/react": "^2.1.5",
    "@radix-ui/react-dialog": "^1.1.2",
    "@radix-ui/react-icons": "^1.3.0",
    "@radix-ui/react-slot": "^1.1.0",
    "@vercel/analytics": "^1.3.2",
    "@vercel/speed-insights": "^1.0.14",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "framer-motion": "^11.11.10",
    "lucide-react": "^0.453.0",
    "next": "14.2.7",
    "photoswipe": "^5.4.4",
    "react": "^18",
    "react-dom": "^18",
    "react-photoswipe-gallery": "^3.0.2",
    "sharp": "^0.33.5",
    "tailwind-merge": "^2.5.4",
    "tailwindcss-animate": "^1.0.7"
